{
    "name": "chiron/discover",
    "description": "Composer services discover - For the Chiron Framework",
    "keywords": [],
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Chiron\\Discover\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chiron\\Discover\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^7.2",
        "chiron/core": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12",
        "overtrue/phplint": "^2.0",
        "chiron/coding-standard": "^3.0"
    },
    "scripts": {
        "phpunit": "phpunit --colors=always",
        "test-coverage": "phpunit --coverage-clover clover.xml",
        "phpstan": "phpstan analyse --ansi",
        "phplint": "phplint --ansi",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "chiron": {
            "bootloaders": [
                "Chiron\\Discover\\Bootloader\\DiscoverCommandBootloader"
            ]
      }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
